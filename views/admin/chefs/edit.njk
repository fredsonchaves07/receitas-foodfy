{% extends 'layout-admin.njk' %}
{% block content %}
    <div class="content-header">
        <h2>Editando Chef</h2>
        <div>
            <button type="submit" class="button button-delete" form="form-delete">Deletar</button>
            <button type="submit" class="button" form="form-edit">Salvar</button>
        </div>
    </div>
    <form action="/admin/chefs?_method=PUT" method="POST" id="form-edit">
        <div class="content-form">
            <div class="content-form-avatar">
                <img src="{{chef.avatar_url}}" alt="">
            </div>

            <div>
                {% include 'admin/chefs/fields.njk' %}
            </div>
        </div>
    </form>
    <form action="/admin/chefs?_method=DELETE" method="POST" id="form-delete">
        <input type="hidden" name="id" value="{{chef.id}}">
    </form>
{% include 'confirmationDelete.njk' %}
{% endblock content %}