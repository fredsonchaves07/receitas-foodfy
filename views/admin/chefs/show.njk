{% extends 'components/layout-admin.njk' %}
{% block content %}
<div class="content-header">
    <h2>Chef: {{chef.name}}</h2>
    <a href="{{chef.id}}/edit" class="button">Editar chef</a>
</div>
<section class="chef-show-header">
    <img src="{{chef.avatar_url}}" alt="">
    <h1>{{chef.name}}</h1>
    <div>{{contRecipes}} Receitas</div>
</section>
<section class="chef-show-detail">
    <div class="item">
        <h2>Receitas</h2>

        <div class="cards cards-recipes">
        {% for recipe in recipes %}
        <div class="card">
            <section class="card-img-recipe">
                <img src="{{recipe.image}}">
            </section>
            <section class="card-details">

                    <div>
                        {{recipe.title}}
                    </div>
                    <div>
                        por {{recipe.author}}
                    </div>
                    <div>
                        <a href="recipes/{{recipe.id}}">Visualizar</a>
                    </div>

            </section>
        </div>
        {% endfor %}
    </div>
    </div>
</section>
{% endblock content %}