{% extends "layout-admin.njk" %}
{% block content %}
    <div class="content-header">
        <h2>Editando receita</h2>
        <div>
            <button type="submit" class="button button-delete" form="form-delete">Deletar</button>
            <button type="submit" class="button" form="form-edit">Salvar</button>
        </div>
    </div>
    
    <form action="/admin/recipes?_method=PUT" method="POST" id="form-edit">
        <div class="content-form">
            <div>
                {% include 'admin/recipes/fields.njk' %}
            </div>
        </div>
    </form>

    <form action="/admin/recipes?_method=DELETE" method="POST" id="form-delete">
        <input type="hidden" name="id" value="{{recipe.id}}">
    </form>
    
{% include "confirmationDelete.njk" %}
{% include "utils.njk" %}
{% endblock %}