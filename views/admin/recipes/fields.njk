<fieldset>
    <div class="item">
        <label for="">Imagem da receita</label>
        <div class="photo-item">
            <label id="photo-upload" for="photos">
                <input type="file" 
                   name="photo_recipe" 
                   id="photos"
                   accept="image/*"
                   multiple
                   onchange = "PhotosUpload.fileUpload(event)"
                   required>
                <i class="material-icons">add</i> 
            </label> 
            <div id="photos-preview">
                {% if recipe.recipeFiles %}
                    {% for image in recipe.recipeFiles %}
                        <div class="photo" id={{image.file_id}}>
                            <img src="{{image.path}}">
                            <i class="material-icons" onclick="PhotosUpload.removePhoto(event)">close</i>
                        </div>
                    {% endfor %}
                   <input type="hidden" name="removed_files">
                {% endif %}
            </div>  
        </div>
    </div>

    <div class="item">
        <label for="chef_id">Chef</label>
        
        <select name="chef_id" id="" required> 
            <option value="" disabled selected >Selecione o chef</option>
            {% for chef in chefs %}
                <option value="{{chef.id}}"
                        {% if recipe.chef_id == chef.id %}
                            selected
                        {% endif %}>
                        {{chef.name}}
                </option>
            {% endfor %}
        </select>
    </div>

    <div class="item">
        <label for="title">Título da Receita</label>
        <input value="{{recipe.title}}" type="text" name="title" placeholder="Digite o nome da receita" required> 
    </div>

    <div class="item">
        <label for="ingredient">Ingredientes</label>
        <div id="ingredients">
            {% if recipe %}
                {% for ingredient in recipe.ingredients %}
                <div class="ingredient">
                    <input value="{{ingredient}}" type="text" name="ingredients[]" placeholder="Digite o ingrediente" required> 
                </div> 
                {% endfor %}
            {% else %}
                <div class="ingredient">
                    <input value="{{ingredient}}" type="text" name="ingredients[]" placeholder="Digite o ingrediente" required> 
                </div> 
            {% endif %}
            
        </div>
        <input type="button" value="Adicionar novo ingrediente" class="add-ingredient" onclick="addIngredient()">
    </div>

    <div class="item">
        <label for="preparations">Modo de Preparo</label>
        <div id="preparations">
            {% if recipe %}
                {% for preparation in recipe.preparation %}
                <div class="preparation">
                    <input value="{{preparation}}" type="text" name="preparation[]" placeholder="Digite o modo de preparo" required>
                </div>
                {% endfor %}
            {% else %}
                <div class="preparation">
                    <input value="{{preparation}}" type="text" name="preparation[]" placeholder="Digite o modo de preparo" required>
                </div>
            {% endif %}
        </div>
        <input type="button" value="Adicionar novo passo" class="add-preparation" onclick="addPreparation()">
    </div>

    <div class="item">
        <label for="information">Informações adicionais</label>
        <textarea  name="information" placeholder="Digite as informações adicionais">{{recipe.information}}</textarea>
    </div>

    <input type="hidden" name="id" value="{{recipe.id}}">

</fieldset>


