<fieldset>
    <div class="item">
        <label for="image">Imagem da receita</label>
        <input value="{{recipe.image}}" type="text" name="image" placeholder="Digite o caminho da imagem">
    </div>

    <div class="item">
        <label for="chef_id">Chef</label>
        <select name="chef_id" id="">
            {% for chef in chefs %}
                <option value="{{chef.id}}"
                        {% if recipe.chef_id == chef.id %}
                            selected
                        {% endif %}>
                        {{chef.name}}
                </option>
            {% endfor %}
        </select>
    </div>

    <div class="item">
        <label for="title">Título da Receita</label>
        <input value="{{recipe.title}}" type="text" name="title" placeholder="Digite o nome da receita" > 
    </div>

    <div class="item">
        <label for="ingredient">Ingredientes</label>
        <div id="ingredients">
            {% if recipe %}
                {% for ingredient in recipe.ingredients %}
                <div class="ingredient">
                    <input value="{{ingredient}}" type="text" name="ingredients[]" placeholder="Digite o ingrediente" > 
                </div> 
                {% endfor %}
            {% else %}
                <div class="ingredient">
                    <input value="{{ingredient}}" type="text" name="ingredients[]" placeholder="Digite o ingrediente" > 
                </div> 
            {% endif %}
            
        </div>
        <input type="button" value="Adicionar novo ingrediente" class="add-ingredient" onclick="addIngredient()">
    </div>

    <div class="item">
        <label for="preparations">Modo de Preparo</label>
        <div id="preparations">
            {% if recipe %}
                {% for preparation in recipe.preparation %}
                <div class="preparation">
                    <input value="{{preparation}}" type="text" name="preparation[]" placeholder="Digite o modo de preparo" >
                </div>
                {% endfor %}
            {% else %}
                <div class="preparation">
                    <input value="{{preparation}}" type="text" name="preparation[]" placeholder="Digite o modo de preparo" >
                </div>
            {% endif %}
        </div>
        <input type="button" value="Adicionar novo passo" class="add-preparation" onclick="addPreparation()">
    </div>

    <div class="item">
        <label for="information">Informações adicionais</label>
        <textarea  name="information" placeholder="Digite as informações adicionais">{{recipe.information}}</textarea>
    </div>

    <input type="hidden" name="id" value="{{recipe.id}}">

</fieldset>


