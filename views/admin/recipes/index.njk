{% extends "layout-admin.njk" %}
{% block content %}
    <div class='content-header'>
        <h2>Gerenciar receitas</h2>
        <a href="recipes/create" class="button">Nova Receita</a>
    </div>

    <div class="cards cards-recipes">
        {% for receita in receitas %}
        <div class="card">
            <section class="card-img-recipe">
                <img src="{{receita.image}}">
            </section>
            <section class="card-details">

                    <div>
                        {{receita.title}}
                    </div>
                    <div>
                        por {{receita.author}}
                    </div>
                    <div>
                        <a href="receitas/{{receita.id}}">Visualizar</a>
                    </div>

            </section>
        </div>
        {% endfor %}
    </div>
{% endblock %}