{% extends "components/layout-admin.njk" %}
{% block content %}
<div class="content-header">
    <h2>Receita: {{recipe.title}}</h2>
    <a href="/admin/recipes/{{recipe.id}}/edit" class="button">Editar Receita</a>
</div>
<section class="recipe-show-header">
    <img src="{{recipe.imagesFile[0]}}" alt="imagem da receita {{recipe.title}}">
    <div class="recipe-gallery">
        {% for image in recipe.imagesFile %}
            <img src="{{image}}" alt="" onclick="ImageGallery.setImage(event)" 
            {% if image == recipe.imagesFile[0]%} class="active" {% endif %}>
        {% endfor %}
    </div>
    <h1>{{recipe.title}}</h1>
    <div>por {{recipe.author}}</div>
</section>
<section class="class-recipe-details">
    <div class="item">
        <h2>Ingredientes</h2>
        <ul>
            {% for ingredient in recipe.ingredients %}
                <li>{{ingredient}}</li>
            {% endfor %}
        </ul>
    </div>
    <div class="item">
        <h2>Modo de Preparo</h2>
        <ul>
            {% for preparation in recipe.preparation %}
                <li>{{preparation}}</li>
            {% endfor %}
        </ul>
        </div>
    {% if recipe.information != "" %}
    <div class="item">
        <h2>Informações adicionais</h2>
        <p>
            {{recipe.information}}
        </p>
    </div>
    {% endif %}
</section>
{% endblock %}