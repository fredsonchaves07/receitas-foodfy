{% extends 'components/layout-site.njk' %}
{% block content %}
    <section class="recipe-show-header">
    <img src="{{recipe.image}}" alt="imagem da receita {{recipe.title}}">
    <h1>{{recipe.title}}</h1>
    <div>por {{recipe.author}}</div>
</section>
<section class="class-recipe-details">
    <div class="item">
        <h2>Ingredientes</h2>
        <ul>
            {% for ingredient in recipe.ingredients %}
                <li>{{ingredient}}</li>
            {% endfor %}
        </ul>
    </div>
    <div class="item">
        <h2>Modo de Preparo</h2>
        <ul>
            {% for preparation in recipe.preparation %}
                <li>{{preparation}}</li>
            {% endfor %}
        </ul>
        </div>
    {% if recipe.information != "" %}
    <div class="item">
        <h2>Informações adicionais</h2>
        <p>
            {{recipe.information}}
        </p>
    </div>
    {% endif %}
</section>
{% endblock %}